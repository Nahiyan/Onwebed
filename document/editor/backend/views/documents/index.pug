extends ../base/layout

block content
    h1 List of Documents
    table.table.table-striped
      thead
        tr
          th(scope="col") Name
          th(scope="col") Actions
      tbody
        each documentName in documentNames
          tr
            td= documentName
            td
              a(href="edit/" + documentName).btn.btn-outline-primary Edit
              | 
              a(href="delete/" + documentName).btn.btn-outline-danger Delete